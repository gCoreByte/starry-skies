<h1><%= t('titles.sign_up') %></h1>
<div class='col-4'>
  <%= form_with(url: sign_up_path) do |form| %>
    <% if @admin_account.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@admin_account.errors.count, "error") %></h2>
        <ul>
          <% @admin_account.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :email, t('attributes.email'), { class: 'form-label' } %>
      <%= form.email_field :email, value: @admin_account.email, required: true, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :name, t('attributes.name'), { class: 'form-label' } %>
      <%= form.text_field :name, value: @admin_account.name, required: true, autofocus: true, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= form.label :password, t('attributes.password'), { class: 'form-label' } %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", class: 'form-control' %>
      <div>8 characters minimum.</div>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation, t('attributes.password_confirmation'), { class: 'form-label' } %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <div class="py-3">
      <%= form.submit t('titles.sign_up'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
