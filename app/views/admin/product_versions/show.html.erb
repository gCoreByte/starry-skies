<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>
<div class="row">
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">

        <%= card_title('Product version details') do %>
          <%= link_to '', edit_admin_product_version_path(@product_version), class: 'btn btn-warning fas fa-pencil', data: { turbo: true, turbo_frame: 'modal' } %>
          <%= link_to '', admin_product_version_path(@product_version), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger fas fa-trash' %>
          <% if @product_version.draft? %>
            <%= link_to '', activate_admin_product_version_path(@product_version), data: {turbo_method: :patch, turbo_confirm: 'Are you sure?'}, class: 'btn btn-success fas fa-play' %>
          <% end %>
          <% if @product_version.active? %>
            <%= link_to '', deactivate_admin_product_version_path(@product_version), data: {turbo_method: :patch, turbo_confirm: 'Are you sure?'}, class: 'btn btn-danger fas fa-stop' %>
          <% end %>
        <% end %>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <%= render 'show', locals: { product_version: @product_version } %>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">
        <h2 class="card-title">
          Product prices
        </h2>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card mb-3 border">
      <div class="card-header">
        <h2 class="card-title">
          Product categories
        </h2>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div>
</div>
