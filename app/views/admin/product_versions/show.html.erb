<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>
<%= page_title '' %>

<div class="row">
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">

        <%= card_title('Product version details') do %>
          <%= edit_button([:admin, @product_version]) %>
          <%= destroy_button([:admin, @product_version]) %>
          <% if @product_version.draft? %>
            <%= activate_button([:admin, @product_version]) %>
          <% end %>
          <% if @product_version.active? %>
            <%= deactivate_button([:admin, @product_version]) %>
          <% end %>
        <% end %>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <%= render 'show', locals: { product_version: @product_version } %>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">
        <h2 class="card-title">
          Product prices
        </h2>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card mb-3 border">
      <div class="card-header">
        <h2 class="card-title">
          Product categories
        </h2>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div>
</div>
