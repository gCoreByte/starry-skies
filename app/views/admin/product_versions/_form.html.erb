<%= form_with(model: [:admin, @product, @product_version], scope: :product_version) do |form| %>
  <div class='modal-body'>
    <% if @service.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@service.errors.count, "error") %></h2>
        <ul>
          <% @service.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='mb-3'>
      <%= form.label :width, t('attributes.width'), { class: 'form-label' } %>
      <%= form.number_field :width, { class: 'form-control' } %>
    </div>
    <div class='mb-3'>
      <%= form.label :height, t('attributes.height'), { class: 'form-label' } %>
      <%= form.number_field :height, { class: 'form-control' } %>
    </div>
    <div class='mb-3'>
      <%= form.label :length, t('attributes.length'), { class: 'form-label' } %>
      <%= form.number_field :length, { class: 'form-control' } %>
    </div>
    <div class='mb-3'>
      <%= form.label :weight, t('attributes.weight'), { class: 'form-label' } %>
      <%= form.number_field :weight, { class: 'form-control' } %>
    </div>
    <div class='mb-3'>
      <%= form.label :weight_unit, t('attributes.weight_unit'), { class: 'form-label' } %>
      <%= form.select :weight_unit, ProductVersion::WeightUnits::ALL, { include_blank: true }, { class: 'form-select' } %>
    </div>
    <div class='mb-3'>
      <%= form.label :size_unit, t('attributes.size_unit'), { class: 'form-label' } %>
      <%= form.select :size_unit, ProductVersion::SizeUnits::ALL, { include_blank: true }, { class: 'form-select' } %>
    </div>
  </div>

  <div class='modal-footer'>
    <%= form.submit t('save'), class: 'btn btn-primary' %>
  </div>
<% end %>
