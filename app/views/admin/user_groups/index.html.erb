<%= page_title(t('titles.user_groups')) do %>
  <%= create_button(:admin, :store, :user_group) %>
<% end %>

<div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card mb-3 border">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead>
              <th><%= t('attributes.name') %></th>
              <th><%= t('attributes.key') %></th>
              <th><%= t('attributes.ranking') %></th>
              <th><%= t('attributes.actions') %></th>
            <tbody id=user_groups>
              <%= render @user_groups %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
