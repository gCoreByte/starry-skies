<%= page_title(t('titles.variables')) %>
<div class="p-3">
  <% @variables.each do |record_type, vars| %>
    <div class="card mb-3 border">
      <div class="card-header sticky-top">
        <%= card_title(record_type.humanize) %>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% vars.each do |var| %>
            <li class="list-group-item">
              <%= var %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
