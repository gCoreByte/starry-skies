<tbody id='purchase_order'>
  <tr>
    <th>Reference Number</th>
    <td><%= @purchase_order.reference_number %></td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @purchase_order.status %></td>
  </tr>
  <tr>
    <th>First name</th>
    <td><%= @purchase_order.first_name %></td>
  </tr>
  <tr>
    <th>Last name</th>
    <td><%= @purchase_order.surname %></td>
  </tr>
  <tr>
    <th>Created at</th>
    <td><%= time_tag(@purchase_order.created_at) %></td>
  </tr>
</tbody>
