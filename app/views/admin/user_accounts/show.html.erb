<%= page_title '' %>
<div class="row">
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">
        <%= card_title(t('titles.user_account_details')) %>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <%= render 'show', locals: { user_account: @user_account } %>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">
        <%= card_title(t('titles.user_groups')) do %>
          <% create_button(:admin, @user_account, :user_user_group) %>
        <% end %>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.key') %></th>
            <th><%= t('attributes.ranking') %></th>
            <th><%= t('attributes.actions') %></th>
          </thead>
          <tbody id='user_user_groups'>
            <%= render @user_user_groups %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
