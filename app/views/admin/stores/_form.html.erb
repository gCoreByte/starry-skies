<%= form_with(model: [:admin, store]) do |form| %>
  <div class="modal-body">
    <% if store.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(store.errors.count, "error") %></h2>
        <ul>
          <% store.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :name, t('attributes.name'), { class: 'form-label'} %>
      <%= form.text_field :name, { class: 'form-control' } %>
    </div>
    <div class="mb-3">
      <%= form.label :url, t('attributes.subdomain'), { class: 'form-label' } %>
      <%= form.text_field :url, { class: 'form-control' } %>
    </div>
    <div class="mb-3 form-check">
      <%= form.check_box :example_store, { class: 'form-check-input' } %>
      <%= form.label :example_store, t('attributes.example_store'), { class: 'form-check-label' } %>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit t('save'), class: 'btn btn-primary' %>
  </div>
<% end %>
