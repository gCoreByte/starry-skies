<%= page_title(@store.name) do %>
  <%= edit_button(:admin, @store) %>
  <%= destroy_button(:admin, @store) %>
<% end %>

<div class="row">
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">
        <%= card_title(t('titles.store_details'))%>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <%= render 'show', locals: { store: @store } %>
        </table>
      </div>
    </div>
  </div>
  <div class="col-xl-6">
    <div class="card mb-3 border">
      <div class="card-header">
        <%= card_title(t('titles.store_data')) %>
      </div>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <tbody>
            <tr>
              <td>
                <%= link_to admin_store_products_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class="fas fa-box"></i> <%= t('titles.products') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to admin_store_product_categories_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class="fas fa-table-columns"></i> <%= t('titles.categories') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
              <%= link_to admin_store_purchase_orders_path(@store), class: 'btn btn-sm btn-primary' do %>
                <i class='fas fa-cart-shopping'></i> <%= t('titles.orders') %>
              <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to admin_store_pages_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class='fas fa-file'></i> <%= t('titles.pages') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to admin_store_page_templates_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class='fas fa-file-lines'></i> <%= t('titles.page_templates') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to admin_store_blog_posts_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class='fas fa-blog'></i> <%= t('titles.blog_posts') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to admin_store_user_groups_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class='fas fa-user-group'></i> <%= t('titles.user_groups') %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to admin_store_user_accounts_path(@store), class: 'btn btn-sm btn-primary' do %>
                  <i class='fas fa-user'></i> <%= t('titles.user_accounts') %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
