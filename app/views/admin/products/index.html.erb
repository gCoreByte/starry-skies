<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <div class="row">
    <div class="col-lg-12">
      <div class="card mb-3 border">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead>
              <th>Name</th>
              <th>Key</th>
              <th>Activated at</th>
            <tbody>
              <% @products.each do |product| %>
                <tr>
                  <td><%= link_to product.name, admin_product_path(product) %></td>
                  <td><%= product.key %></td>
                  <td><%= time_tag(product.activated_at) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "New product", new_admin_store_product_path %>
