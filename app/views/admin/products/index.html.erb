<%= page_title(t('titles.products')) do %>
  <%= create_button(:admin, @store, :product) %>
<% end %>

<div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card mb-3 border">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead>
              <th><%= t('attributes.key') %></th>
              <th><%= t('attributes.created_at') %></th>
              <th><%= t('attributes.actions') %></th>
            <tbody id='products'>
              <%= render @products %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
