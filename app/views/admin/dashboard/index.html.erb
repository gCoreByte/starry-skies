            <thead>
              <th>Name</th>
              <th>Revenue</th>
              <th>Open issues</th>
              <th>Sales</th>
              <th>Actions</th>
            <tbody id="stores">
              <%= render @stores %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
