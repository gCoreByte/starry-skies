<%= page_title(t('titles.dashboard'))  do %>
  <%= create_button([:admin, :store]) %>
<% end %>

<div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card mb-3 border">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead>
              <th><%= t('attributes.name') %></th>
              <th><%= t('attributes.revenue') %></th>
              <th><%= t('attributes.sales') %></th>
              <th><%= t('attributes.actions') %></th>
            <tbody id="stores">
              <%= render @stores %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
