<!DOCTYPE html>
<html>
  <head>
    <title><%= t('titles.sign_in') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div class="d-flex w-100 align-items-stretch">
      <div class="container-fluid p-5 mx-5">
        <h1>
          Login
        </h1>
        <%= form_with(model: @user_session) do |form| %>
          <% if @service.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(@service.errors.count, "error") %></h2>
              <ul>
                <% @service.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class='row'>
            <div class='col-6'>
              <div class='mb-3'>
                <%= form.label :email, t('attributes.email'), { class: 'form-label' } %>
                <%= form.email_field :email, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :password, t('attributes.password'), { class: 'form-label' } %>
                <%= form.password_field :password, { class: 'form-control' } %>
              </div>
            </div>
            <div class='d-flex justify-content-end'>
              <%= form.submit t('titles.sign_in'), class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
