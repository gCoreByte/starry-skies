<!DOCTYPE html>
<html>
  <head>
    <title><%= t('titles.finalize_purchase') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Hotjar Tracking Code for Site 4968135 (name missing) -->
    <% if Rails.env.production? %>
      <script>
        (function(h,o,t,j,a,r){
            h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
            h._hjSettings={hjid:4968135,hjsv:6};
            a=o.getElementsByTagName('head')[0];
            r=o.createElement('script');r.async=1;
            r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
            a.appendChild(r);
        })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
      </script>
    <% end%>
  </head>
  <body>
    <div class="d-flex w-100 align-items-stretch">
      <div class="container-fluid p-5 mx-5">
        <h1>
          <%= t('titles.finalize_purchase') %>
        </h1>
        <%= form_with(model: @purchase_order) do |form| %>
          <% if @service.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(@service.errors.count, "error") %></h2>
              <ul>
                <% @service.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class='row'>
            <div class='col-6'>
              <div class='mb-3'>
                <%= form.label :first_name, t('attributes.first_name'), { class: 'form-label' } %>
                <%= form.text_field :first_name, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :surname, t('attributes.last_name'), { class: 'form-label' } %>
                <%= form.text_field :surname, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :phone_number, t('attributes.phone_number'), { class: 'form-label' } %>
                <%= form.telephone_field :phone_number, { class: 'form-control' } %>
              </div>
            </div>
            <div class='col-6'>
              <div class='mb-3'>
                <%= form.label :address, t('attributes.address'), { class: 'form-label' } %>
                <%= form.text_field :address, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :city, t('attributes.city'), { class: 'form-label' } %>
                <%= form.text_field :city, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :state, t('attributes.state'), { class: 'form-label' } %>
                <%= form.text_field :state, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :country, t('attributes.country'), { class: 'form-label' } %>
                <%= form.text_field :country, { class: 'form-control' } %>
              </div>
              <div class='mb-3'>
                <%= form.label :postal_code, t('attributes.postal_code'), { class: 'form-label' } %>
                <%= form.text_field :postal_code, { class: 'form-control' } %>
              </div>
            </div>
          </div>
          <div class='d-flex justify-content-end'>
            <%= form.submit t('save'), class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
